#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

set -x

STAGED_FILES=$(git diff --cached --name-only --diff-filter=ACM | grep '\.ts$') || true

if [ -z "$STAGED_FILES" ]; then
  echo "âœ… No TypeScript files staged. Skipping TypeScript check."
  exit 0
fi

echo "ğŸ” Running TypeScript check on entire project..."

echo "ğŸ” Checking for page.pause() in TypeScript files..."
for file in $STAGED_FILES; do
  if grep -q "await page\.pause()" "$file"; then
    echo "âŒ Found 'await page.pause()' in staged file: $file. Remove before committing."
    exit 1
  fi
done
echo "âœ… No page.pause() found."

yarn tsc --noEmit

if [ $? -ne 0 ]; then
  echo "âŒ TypeScript check failed. Fix errors before committing."
  exit 1
fi

echo "âœ… TypeScript check passed. Proceeding with commit."
